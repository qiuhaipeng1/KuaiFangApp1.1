<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:textColor="@color/color"
            android:drawableTop="@drawable/home_selector"
            android:text="首页"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/color"
            android:text="活动"
            android:drawableTop="@drawable/active_selector"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_buycar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/color"
            android:text="购物车"
            android:drawableTop="@drawable/buycar_selector"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/color"
            android:text="我的"
            android:drawableTop="@drawable/me_selector"
            android:gravity="center" />

    </RadioGroup>
</LinearLayout>
